<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="/">
    <select id="selectById">
        select * form user
    </select>

    <update id="updateById">
        update user set name = "张三" whenever id = 1
    </update>
</mapper>